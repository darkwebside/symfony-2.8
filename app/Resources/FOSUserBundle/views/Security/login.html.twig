{% extends '@FOSUser/layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Login!{% endblock %}

{% block content_title %}
    <h1 class="text-center"> Login
        <small class="subtitle">
            Es necesario hacer login
        </small>
    </h1>
{% endblock %}


{% block fos_user_content %}

    {% if error %}
        <div class="alert alert-warning">
            <div class="container">
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        </div>

    {% endif %}

    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="input-group">
            <input class="form-control" placeholder="{{ 'security.login.username'|trans }}" type="text"
                   id="username" name="_username" value="{{ last_username }}" required="required"/>
                        <span class="input-group-addon">
                        <i class="fa fa-user"></i>
                        </span>
        </div>

        <!--<div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input class="form-control" type="password" id="password" name="_password" required="required"/>
                </div>-->

        <div class="input-group">

            <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password"
                   id="password" name="_password" required="required"/>
                        <span class="input-group-addon">
                        <i class="fa fa-lock"></i>
                        </span>
        </div>

        <div class="input-group">
            <div class="row">

                <div class="col-md-6  col-centered">
                    <label for="remember_me" class="checkbox">
                        <span class="icons"><span class="first-icon fa fa-square-o"></span><span
                                    class="second-icon fa fa-check-square-o"></span></span>
                        <input type="checkbox" data-toggle="checkbox" id="remember_me" name="_remember_me"
                               value="on">
                        {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>

                <div class="col-md-6  col-centered">
                    <a class="btn btn-round btn-default"
                       href="{{ path("fos_user_resetting_request") }}">{{ 'resetting.request.submit'|trans }}</a>
                </div>
            </div>
        </div>

        <div class="form-group">
            <input class="btn btn-block btn-lg btn-info" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>
        </div>

    </form>





{% endblock fos_user_content %}
